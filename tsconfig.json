{
  "compileOnSave": false,
  "compilerOptions": {
    "downlevelIteration": true,
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "target": "es2019",
    "types": ["node", "jest"],
    "skipLibCheck": true,
    "paths": {
      "@assets/*" : ["src/assets/*"],

    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2019",
      "dom"
    ],
    "module": "esnext",
    "baseUrl": "./",
    "allowSyntheticDefaultImports":true
  },
  "exclude": [
    "**/*.test.ts",
    "dist",
    "node_modules"
  ],
  "include" : [
    "src/**/*"
  ]
}
